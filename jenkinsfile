pipeline {
    agent any

    tools {
        maven 'mymaven'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/sanjaykumar156/ecom.automation.suite'
            }
        }

        stage('Build & Test') {
            steps {
                bat 'mvn clean test -DsuiteXmlFile=testng.xml'
            }
        }

        stage('Publish Extent Report') {
            steps {
                publishHTML(target: [
                    reportDir: 'test-output/SparkReport',
                    reportFiles: 'Spark.html',
                    reportName: 'Extent Report',
                    keepAll: true,
                    allowMissing: true,
                    alwaysLinkToLastBuild: true
                ])
            }
        }
    }

    post {
        always {
            junit 'target/surefire-reports/*.xml'
            archiveArtifacts artifacts: 'test-output/SparkReport/*.html', fingerprint: true
        }

        success {
            emailext(
                to: 'sanjaytanguturi37@gmail.com',
                subject: "✅ Build Success: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                body: """
                <html><body>
                <p>✅ Jenkins build succeeded</p>
                <p><b>Job:</b> ${env.JOB_NAME}</p>
                <p><b>Build:</b> ${env.BUILD_NUMBER}</p>
                <p><b>Extent Report:</b> 
                <a href="${env.BUILD_URL}artifact/test-output/SparkReport/Spark.html">View Report</a></p>
                </body></html>
                """,
                mimeType: 'text/html'
            )
        }

        failure {
            emailext(
                to: 'sanjaytanguturi37@gmail.com',
                subject: "❌ Build Failed: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                body: """
                <html><body>
                <p>❌ Jenkins build FAILED</p>
                <p><b>Job:</b> ${env.JOB_NAME}</p>
                <p><b>Build:</b> ${env.BUILD_NUMBER}</p>
                <p><b>Extent Report (if generated):</b> 
                <a href="${env.BUILD_URL}artifact/test-output/SparkReport/Spark.html">
                View Report</a></p>
                </body></html>
                """,
                mimeType: 'text/html',
                attachLog: true
            )
        }
    }
}
